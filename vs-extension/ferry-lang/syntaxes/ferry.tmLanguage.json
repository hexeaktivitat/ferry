{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Ferry",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ferry",
					"match": "\\b(if|while|for|let|def|fn|then|else)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ferry",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ferry",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"name": "meta.type.annotation",
			"match": "\\b(Int|String|List)\\b"
		},
		"comments": {
			"name": "comment.line.double-slash",
			"begin": "//",
			"end": "\n"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator",
					"match": "(geti|cons|\\+|\\-|\\/|\\*|\\:\\=|\\=|\\.\\.)"
				}
			]
		}
	},
	"scopeName": "source.ferry"
}